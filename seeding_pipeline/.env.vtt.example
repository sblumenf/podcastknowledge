# VTT Knowledge Pipeline Environment Configuration

# Neo4j Database
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=password
NEO4J_DATABASE=neo4j

# LLM API Keys (choose one or more)
GOOGLE_API_KEY=your_google_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# Optional: HuggingFace Token (for sentence transformers)
HF_TOKEN=your_huggingface_token_here

# VTT Processing
VTT_INPUT_DIR=./transcripts
VTT_OUTPUT_DIR=./processed_transcripts
VTT_CHECKPOINT_DIR=./checkpoints

# Configuration
PODCAST_KG_CONFIG_DIR=./config
PODCAST_KG_LOG_LEVEL=INFO

# Optional: Redis Cache (comment out if not using)
# REDIS_URL=redis://localhost:6379

# Optional: API Configuration (if using API)
# API_HOST=0.0.0.0
# API_PORT=8000